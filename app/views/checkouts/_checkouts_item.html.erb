<% @order_items.each do |item| %>

  <h3><%= item.furniture.title %></h3>
  <h5><%= item.furniture.price %></h5>

  <%= form_for item, remote: true do |f| %>
    <%= f.hidden_field :furniture_id, :value => item.furniture.id %>
    <%= f.number_field :quantity, :value => item.quantity.to_i %>
    <%= f.submit "Update checkout" %>

    <%= link_to "Remove Items", order_item_path(item), method: :delete, remote: true %>

  <% end %>

  <h2>Subtotal: <%= item.total %></h2>

<% end %>

<h3>Subtotal: <%= current_order.subtotal %></h3>